---
const {
  title = "k_k",
  description = "k_k's website",
} = Astro.props.frontmatter || Astro.props
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:image" content={Astro.site + "icon.png"} />
  <style is:inline>
    body {
      font-family: serif;
    }
    main {
      max-width: 34.4rem;
      padding: 1.2rem;
      margin: auto;
    }
    header ul {
      display: flex;
      padding: 0;
      justify-content: center;
      list-style: none;
    }
    header li + li::before {
      content: "/";
      margin: 0 .5rem;
    }
    footer {
      text-align: center;
    }
    footer img {
      image-rendering: pixelated;
    }
    h2::before {
      content: "# ";
    }
    pre {
      padding: .5rem;
      border: 1px solid;
      border-radius: .2rem;
    }
  </style>
</head>
<body>
  <main>
    <header>
      <ul>
        <li><a href="/">Top</a></li>
        <li><a href="/privacy-policy/">Privacy</a></li>
        <!--<li><a href="https://yamad.me">Home(ja)</a></li>-->
      </ul>
    </header>
    <hr />
<slot />
    <hr />
    <footer>
      <div>
        <!--<img src="/badge.png" alt="Gentoo badge" title="Powered by Gentoo Linux" />-->
      </div>
      <small>&copy; 2024 k_k, YamaD</small>
    </footer>
  </main>
</body>
</html>
